<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sjtu.dolo.mapper.CourseMapper">
    <select id="getCourse" resultType="sjtu.dolo.model.Course">
        select * from course2.course limit #{startIndex},#{pageSize}
    </select>
    <select id="getCourseLike" resultType="sjtu.dolo.model.Course">
        select * from course2.course where courseName like #{value} limit #{startIndex},#{pageSize}
    </select>
    <select id="getPageNumber" resultType="int">
        select count(*)/#{pageSize} from course2.course
    </select>
</mapper>
